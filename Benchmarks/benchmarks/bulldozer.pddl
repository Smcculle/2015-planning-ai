(:domain bulldozer
  (:action drive
	   :parameters (?vehicle - vehicle ?from - place ?to - place)
	   :precondition (and (road ?from ?to)
			      (at ?vehicle ?from)
			      (mobile ?vehicle))
	   :effect (and (at ?vehicle ?to) (not (at ?vehicle ?from))))
  (:action cross
	   :parameters (?vehicle - vehicle ?from - place ?to - place)
	   :precondition (and (bridge ?from ?to)
			      (at ?vehicle ?from)
			      (mobile ?vehicle))
	   :effect (and (at ?vehicle ?to) (not (at ?vehicle ?from))))
  (:action board
	   :parameters (?person - person ?place - place ?vehicle - vehicle)
	   :precondition (and (at ?person ?place)
			      (person ?person)
			      (vehicle ?vehicle)
			      (at ?vehicle ?place))
	   :effect (and (driving ?person ?vehicle)
			(mobile ?vehicle)
			(not (at ?person ?place))
			(not (mobile ?person))))
  (:action disembark
	   :parameters (?person - person ?place - place ?vehicle - vehicle)
	   :precondition (and (person ?person)
			      (vehicle ?vehicle)
			      (driving ?person ?vehicle)
			      (at ?vehicle ?place))
	   :effect (and (at ?person ?place)
			(mobile ?person)
			(not (driving ?person ?vehicle))
			(not (mobile ?vehicle)))))
